    <div class="card py-3">
        <h1 class="text-center"><%= titulo %></h1>
        <div class="card-body">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" placeholder="correo@correo.com">
